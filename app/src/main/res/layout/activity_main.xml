<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/main_code_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"

            android:background="@android:color/white"
            android:hint="@string/instruction_1"
            android:padding="12dp"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/main_code_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@android:color/white"
            android:hint="Instruction 2"
            android:padding="12dp"
            android:textColor="@android:color/black"

            />


        <EditText
            android:id="@+id/main_code_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@android:color/white"
            android:hint="Instruction 3"
            android:padding="12dp"
            android:textColor="@android:color/black"

            />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="getCommand"
            android:text="@string/submit" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/symbol_table"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:id="@+id/ll_dynamic"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"

            android:background="@android:color/white"
            android:orientation="vertical">

            <TextView

                android:id="@+id/inst1_reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REG1" />

            <TextView
                android:id="@+id/inst2_reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REG2" />

            <TextView
                android:id="@+id/inst3_reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REG3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"

            android:background="@android:color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/val1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Value1" />

            <TextView
                android:id="@+id/val2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Value2" />

            <TextView
                android:id="@+id/val3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Value3" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Intermidiate Code"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/opcode_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1000" />

            <TextView
                android:id="@+id/opcode_2"
                android:layout_width="wrap_content"


                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1003" />

            <TextView
                android:id="@+id/opcode_3"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1006" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"

            android:background="@android:color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/inst1_intcode_index"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="REG1" />

            <TextView
                android:id="@+id/inst2_intcode_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="REG2" />

            <TextView
                android:id="@+id/inst3_intcode_index"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="REG3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"

            android:background="@android:color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/inter_val1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Value1" />

            <TextView
                android:id="@+id/inter_val2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Value2" />

            <TextView
                android:id="@+id/inter_val3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Value3" />
        </LinearLayout>


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Opcode List and Address"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@android:color/white" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:text="@string/code_list"/>
    <TextView
        android:id="@+id/acc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accumulator :: "
        android:textColor="@android:color/white" />
</LinearLayout>
</ScrollView>